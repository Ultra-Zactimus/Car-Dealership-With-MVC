<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>List of Cars For Sale</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
  <div class="container">
  @using Dealership.Models;
    <h1>Dealership</h1>
    @if (Model.Count == 0)
    {
      <p>There are no Cars for sale.</p>
    }
    <ul>
      @foreach (Car car in Model)
      {
        <li><strong>Make and Model:</strong> @car.MakeModel <strong>Year:</strong> @car.Year <strong>Miles:</strong> @car.Miles <strong>Price:</strong> @car.Price</li>
      }
      
    </ul>
    <h2>Post a new listing here!</h2>s
    <a href="/cars/new">Add a new Car to sell.</a>
    </div>
  </body>
</html>